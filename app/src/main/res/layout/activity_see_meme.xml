<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_meme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.salatart.memeticame.Activities.SeeMemeActivity">

    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/tag_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="5dp"
        app:container_background_color="@color/iconBackground"
        app:container_enable_drag="false"
        app:horizontal_interval="10dp"
        app:tag_clickable="true"
        app:tag_theme="random"
        app:vertical_interval="10dp" />

    <ImageView
        android:id="@+id/image_meme"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/meme_rating_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srb_borderColor="@color/colorPrimaryDark"
        app:srb_fillColor="@color/colorPrimary"
        app:srb_isIndicator="true"
        app:srb_numberOfStars="5"
        app:srb_starSize="@dimen/big_star_size"
        app:srb_stepSize="0.1" />
</LinearLayout>
