<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TagsEditText="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/prompt_padding">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <mabbas007.tagsedittext.TagsEditText
            android:id="@+id/tags_edit_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_search_key_words"
            TagsEditText:tagsBackground="@drawable/square"
            TagsEditText:tagsCloseImagePadding="@dimen/defaultTagsCloseImagePadding"
            TagsEditText:tagsCloseImageRight="@drawable/tag_close"
            TagsEditText:tagsTextColor="@color/textColorPrimary"
            TagsEditText:tagsTextSize="@dimen/defaultTagsTextSize" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>