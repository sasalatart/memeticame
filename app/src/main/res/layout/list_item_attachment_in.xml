<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:background="@drawable/message_in_well"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/first_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/label_sender"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="@string/sender_label"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="@string/at"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/label_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="@string/timestamp_label"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorBlack" />

            <ImageView
                android:id="@+id/label_attachment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_attach_file_black_24dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/second_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_row"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:maxHeight="50dp"
                android:minHeight="50dp"
                android:src="@drawable/ic_insert_drive_file_black_24dp"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/label_attachment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/thumbnail"
                android:layout_toStartOf="@id/thumbnail"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/attachment_name"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/label_attachment_mime_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_attachment_name"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/thumbnail"
                android:layout_toStartOf="@id/thumbnail"
                android:text="@string/mime_type"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/label_attachment_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_attachment_mime_type"
                android:layout_toLeftOf="@+id/thumbnail"
                android:layout_toStartOf="@id/thumbnail"
                android:text="@string/attachment_size"
                android:textColor="@color/colorBlack" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/third_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_row">

            <ImageButton
                android:id="@+id/button_copy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:src="@drawable/ic_content_copy_black_24dp" />

            <Button
                android:id="@+id/button_open"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="@string/open"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/group_audio_buttons"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="end"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/button_play"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_play_circle_outline_black_24dp" />

                <ImageButton
                    android:id="@+id/button_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_pause_circle_outline_black_24dp" />

                <ImageButton
                    android:id="@+id/button_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_stop_black_24dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/third_row"
            android:orientation="horizontal"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="45"
                android:scaleY="3" />

            <TextView
                android:id="@+id/label_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/percentage" />
        </LinearLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_progress"
            android:layout_marginTop="10dp"
            android:text="@string/message_label"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textStyle="italic" />
    </RelativeLayout>
</LinearLayout>