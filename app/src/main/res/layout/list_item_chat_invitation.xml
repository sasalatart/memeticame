<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_icon_size"
    android:layout_margin="@dimen/list_item_margin"
    android:orientation="horizontal"
    android:padding="@dimen/list_item_padding">

    <ImageView
        android:id="@+id/chat_icon"
        android:layout_width="@dimen/list_item_icon_size"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/list_item_margin"
        android:background="@color/iconBackground"
        android:src="@drawable/ic_card_membership_black_24dp" />

    <TextView
        android:id="@+id/label_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/invitation_to"
        android:textColor="@color/colorPrimaryDark" />

    <ImageButton
        android:id="@+id/button_reject_chat_invitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_remove_circle_outline_black_24dp" />

    <ImageButton
        android:id="@+id/button_accept_chat_invitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_check_black_24dp" />
</LinearLayout>